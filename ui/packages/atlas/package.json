  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codice/ddf.git"
  },
  "engines": {
    "node": ">=0.10.5"
  },
  "devDependencies": {
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "ace": "*",
    "brace": "0.11.1",
    "chai": "4.1.1",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "js-beautify": "1.7.5",
    "jsdom": "11.12.0",
    "loader-utils": "1.1.0",
    "react-ace": "6.1.3",
    "sinon": "5.0.7",
    "stylelint": "9.5.0",
    "stylelint-config-recommended": "2.1.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.3.2"
  },
  "dependencies": {
    "@material-ui/core": "3.6.1",
    "codice-icons": "*",
    "font-awesome": "4.7",
    "polished": "1.9.3",
